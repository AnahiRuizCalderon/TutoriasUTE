@model TutoriasUTE.ViewModels.GruposCrearAlumnosCommonViewModel

@{
    ViewBag.Title = "AgregarAlumnos";
}

<center>
    <h5 style="color:red">WARNING: no se verifica que la matrícula sea única</h5>
    <h5 style="color:red">WARNING: no se verifican los campos de ID</h5>
    <h4 style="color:red">NO SE PUEDEN BORRAR LOS ALUMNOS</h4>
    <hr />

</center>

@using (Html.BeginForm("AgregarAlumnos", "Grupos", FormMethod.Post))
{
    <fieldset>


        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }

        <div align="center">

            <h4>Crear Alumno</h4>

            @Html.LabelFor(s => s.GruposCrearAlumnosCreateVM.Registration)
            @Html.ValidationMessageFor(s => s.GruposCrearAlumnosCreateVM.Registration, "", new { @class = "text-danger" })
            @Html.TextBoxFor(s => s.GruposCrearAlumnosCreateVM.Registration, new { @class = "form-control" })
            <br />

            @Html.LabelFor(s => s.GruposCrearAlumnosCreateVM.FirstMidName)
            @Html.ValidationMessageFor(s => s.GruposCrearAlumnosCreateVM.FirstMidName, "", new { @class = "text-danger" })
            @Html.TextBoxFor(s => s.GruposCrearAlumnosCreateVM.FirstMidName, new { @class = "form-control" })
            <br />

            @Html.LabelFor(s => s.GruposCrearAlumnosCreateVM.LastNameP)
            @Html.ValidationMessageFor(s => s.GruposCrearAlumnosCreateVM.LastNameP, "", new { @class = "text-danger" })
            @Html.TextBoxFor(s => s.GruposCrearAlumnosCreateVM.LastNameP, new { @class = "form-control" })
            <br />

            @Html.LabelFor(s => s.GruposCrearAlumnosCreateVM.LastNameM)
            @Html.ValidationMessageFor(s => s.GruposCrearAlumnosCreateVM.LastNameM, "", new { @class = "text-danger" })
            @Html.TextBoxFor(s => s.GruposCrearAlumnosCreateVM.LastNameM, new { @class = "form-control" })
            <br />

            @Html.LabelFor(s => s.GruposCrearAlumnosCreateVM.Telephone)
            @Html.ValidationMessageFor(s => s.GruposCrearAlumnosCreateVM.Telephone, "", new { @class = "text-danger" })
            @Html.TextBoxFor(s => s.GruposCrearAlumnosCreateVM.Telephone, new { @class = "form-control" })
            <br />

            @Html.LabelFor(s => s.GruposCrearAlumnosCreateVM.EmergencyTelephone)
            @Html.ValidationMessageFor(s => s.GruposCrearAlumnosCreateVM.EmergencyTelephone, "", new { @class = "text-danger" })
            @Html.TextBoxFor(s => s.GruposCrearAlumnosCreateVM.EmergencyTelephone, new { @class = "form-control" })
            <br />

            @Html.LabelFor(s => s.GruposCrearAlumnosCreateVM.AcademicEmail)
            @Html.ValidationMessageFor(s => s.GruposCrearAlumnosCreateVM.AcademicEmail, "", new { @class = "text-danger" })
            @Html.TextBoxFor(s => s.GruposCrearAlumnosCreateVM.AcademicEmail, new { @class = "form-control" })
            <br />

            @Html.LabelFor(s => s.GruposCrearAlumnosCreateVM.Birthday)
            @Html.ValidationMessageFor(s => s.GruposCrearAlumnosCreateVM.Birthday, "", new { @class = "text-danger" })
            @Html.TextBoxFor(s => s.GruposCrearAlumnosCreateVM.Birthday, new { @class = "form-control" })
            <br />


            @Html.LabelFor(s => s.GruposCrearAlumnosCreateVM.SituationID)
            @Html.ValidationMessageFor(s => s.GruposCrearAlumnosCreateVM.SituationID, "", new { @class = "text-danger" })
            @Html.TextBoxFor(s => s.GruposCrearAlumnosCreateVM.SituationID, new { @class = "form-control" })
            <table>
                @foreach (var situacion in Model.GruposCrearAlumnosCreateVM.Situaciones)
                {
                    <tr>
                        <td>
                            ID = @situacion.ID
                        </td>
                        <td>
                            @situacion.Description
                        </td>
                    </tr>
                }
            </table>
            <br />

            @Html.HiddenFor(s => s.GrupoID)
            <button type="submit" style="height:50px; width:200px;"> Guardar </button>

        </div>

    </fieldset>
}
    <center>
        <button onclick="location.href='@Url.Action("AgregarMaterias", "Grupos", new { ID = Model.GrupoID})'" style="height:50px; width:200px;"> Siguiente </button>
        <hr />
    </center>


<div align="center">
    <h4>Alumnos</h4>

    <table>
        <thead>
            <tr>
                <td>
                    Matricula
                </td>
                <td>
                    Nombre
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var alumno in Model.GruposCrearAlumnosResultVM.Alumnos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => alumno.Registration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => alumno.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
